import javax.swing.*;
import java.awt.*;
import java.awt.event.*;
import java.io.File;
import java.io.IOException;

public class MainFrame extends JFrame {
    private JTextField nameField;
    private JComboBox<String> clientTypeComboBox;
    private JButton createButton;
    private JLabel resultLabel;

    public MainFrame() {
        setTitle("Client Type Application");
        setSize(400, 250);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null); // Center the frame on the screen
        setLayout(new FlowLayout());

        // Create components
        JLabel clientTypeLabel = new JLabel("Select Client Type:");
        String[] clientTypes = {"Manager", "Customer"};
        clientTypeComboBox = new JComboBox<>(clientTypes);
        
        JLabel nameLabel = new JLabel("Enter Client Name:");
        nameField = new JTextField(20);
        
        createButton = new JButton("Create Reservation");
        resultLabel = new JLabel();

        // Add components to the frame
        add(clientTypeLabel);
        add(clientTypeComboBox);
        add(nameLabel);
        add(nameField);
        add(createButton);
        add(resultLabel);

        // Add button click listener
        createButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                String clientType = (String) clientTypeComboBox.getSelectedItem();
                String clientName = nameField.getText().trim();

                // Set client information
                if (clientName.isEmpty()) {
                    resultLabel.setText("Please enter a name.");
                    return;
                }

                if (clientType.equals("Manager")) {
                    Manager managerClient = new Manager();
                    managerClient.setClientType("Manager");
                    managerClient.setClientName(clientName);
                    resultLabel.setText("Manager client created.");
                } else if (clientType.equals("Customer")) {
                    Customer customerClient = new Customer();
                    customerClient.setClientType("Customer");
                    customerClient.setClientName(clientName);
                    resultLabel.setText("Customer client created.");
                }

                // Create reservation file
                try {
                    File reservation = new File("filename.txt");
                    if (reservation.createNewFile()) {
                        resultLabel.setText("File created: " + reservation.getName());
                    } else {
                        resultLabel.setText("File already exists.");
                    }
                } catch (IOException ex) {
                    resultLabel.setText("An error occurred.");
                    ex.printStackTrace();
                }
            }
        });
    }

    public static void main(String[] args) {
        // Set look and feel to system default
        try {
            UIManager.setLookAndFeel(UIManager.getSystemLookAndFeelClassName());
        } catch (Exception e) {
            e.printStackTrace();
        }

        // Create and show the JFrame
        SwingUtilities.invokeLater(new Runnable() {
            @Override
            public void run() {
                MainFrame frame = new MainFrame();
                frame.setVisible(true);
            }
        });
    }
}

class Manager {
    private String clientType;
    private String clientName;

    public void setClientType(String clientType) {
        this.clientType = clientType;
    }

    public void setClientName(String clientName) {
        this.clientName = clientName;
    }
}

class Customer {
    private String clientType;
    private String clientName;

    public void setClientType(String clientType) {
        this.clientType = clientType;
    }

    public void setClientName(String clientName) {
        this.clientName = clientName;
    }
}
