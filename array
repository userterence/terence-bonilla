public class ArrayExample {
    public static void main(String[] args) {
        
        // Declare and initialize an array of integers with 5 elements
        int[] numbers = {10, 20, 30, 40, 50};
        
        // Access and print the elements of the array
        System.out.println("First element: " + numbers[0]);  // Output: 10
        System.out.println("Second element: " + numbers[1]); // Output: 20
        System.out.println("Third element: " + numbers[2]);  // Output: 30

        // Modify an element in the array
        numbers[2] = 100;

        // Print the modified array
        System.out.println("Modified third element: " + numbers[2]);  // Output: 100
        
        // Loop through the array and print all elements
        System.out.println("All elements in the array:");
        for (int i = 0; i < numbers.length; i++) {
            System.out.println(numbers[i]);
        }
    }
}
